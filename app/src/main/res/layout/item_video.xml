<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="4dp"
    app:cardUseCompatPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_video"
            android:layout_width="@dimen/image_item_width"
            android:layout_height="@dimen/image_item_height"
            android:layout_marginEnd="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/text_video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/image_video"
            android:layout_toRightOf="@+id/image_video"
            android:lines="3"
            android:text="Pelatikan Pengurus Ikhwan Khas Oleh Prof. DR. KH. Said Aqiel Siroj, MA"
            android:textSize="@dimen/text_size_title_item" />

        <TextView
            android:id="@+id/text_video_tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_video"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_toEndOf="@+id/image_video"
            android:layout_toRightOf="@+id/image_video"
            android:lines="1"
            android:text="Jakarta 29 Januari 2017"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_tanggal" />

    </RelativeLayout>

</android.support.v7.widget.CardView>